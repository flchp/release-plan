<div class="group ">


  
  <%= simple_form_for [@comment ] do |f| %>
  <%= f.input :content, :label => "Comment ( support Markdown syntax) ", :input_html => { :rows => 10, :data => { :provide => "markdown"} } %>
  <%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn pull-right" %>
  <% end %>
</div>

<div class='pull-left'>

   <%= ibutton('Delete This Comment', edit_comment_path(@comment), :class=>"btn btn-xs", :iclass => "icon icon-trash", :style => "font-weight: bold;background-color: #efefef; border-color: #e1e1e1; color:#cb7f7f;", :method => :delete, :data => { :confirm => "Are you sure?"}) %> 

</div>