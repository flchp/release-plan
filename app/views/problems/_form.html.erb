<%= simple_form_for @problem do |f|  %>

  <%= f.input :title %>

  <%= f.input :description , :input_html => { :rows => 10, :data => { :provide => "markdown"} } %>
  <%= f.input :causes , :input_html => { :rows => 10, :data => { :provide => "markdown"} } %>




  <%= f.button :submit, "Save", class: "btn btn-primary" %> or
  <%= link_to "Back", :back %>
<% end %>