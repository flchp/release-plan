<div class="container">
  <div class="row">
    <div class="panel panel-default widget">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-comment"></span>
        <h3 class="panel-title"> Recent Discussions </h3>
        <span class="label label-info"> <%= @problem.comments_count %> </span>
      </div>
        <div class="panel-body">
            <ul class="list-group">  
                <%= render :partial => "problems/comment_box", :collection => @problem.comments, :as => :comment %>  
            </ul>
    
        </div>
    </div>
  </div>
</div>
