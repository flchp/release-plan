<div class="group problem-comment-form">
 
<%= simple_form_for [@problem, Comment.new ] do |f| %>

  <%= f.input :content, :label => "Comment ( support Markdown syntax) ", :input_html => { :rows => 10, :data => { :provide => "markdown"} } %> 


  <%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn pull-right" %>
<% end %> 



</div>